<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Currency</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Mobile</th>
      <th>Website</th>
      <th>City</th>
      <th>State</th>
      <th>Zipcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.currency %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.mobile %></td>
        <td><%= user.website %></td>
        <td><%= user.city %></td>
        <td><%= user.state %></td>
        <td><%= user.zipcode %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

